@model BlogWeb.API.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .blog-card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: 2px solid #535353;
    }

        .blog-card:hover {
            box-shadow: 0 8px 16px rgba(0, 128, 0, 0.8);
            border: 2px solid #008000;
        }

</style>
<body id="homebodytag">
    <div class="container col-xxl-12 px-4 py-5" style="background-image: url('https://i.imgur.com/CnApzJN.gif');
            background-size: cover; background-position: center; height: 400px; display: flex;
            align-items: center; justify-content: center; color: #333; text-align: center; border-radius:40px">
        <div>
            <h1 class="display-4 lh-1 mb-3 text-decoration-underline" style="font-size:40px; color:black; font-weight:700; margin-left:800px; margin-top:-80px;">
                Ratul Koley Blogs
            </h1>
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-center" style="margin-bottom:20px; margin-top:20px;">
            <div class="col-12 d-flex justify-content-center">
                @if (Model != null && Model.TagList.Any())
                {
                    foreach (var tag in Model.TagList)
                    {
                        <span class="badge bg-dark me-1" style="margin-left:10px;">
                            @tag.Name
                        </span>
                    }
                }
            </div>
        </div>
    </div>
    <hr style="width: 100%; border-top: 2px solid #ffff; margin-top: 10px;" />

    <div class="container" style="max-width: 100%">
        @if (Model != null && Model.BlogPostList.Any())
        {
            @for (int i = 0; i < Model.BlogPostList.Count; i += 3)
            {
                <div class="row justify-content-center mb-5">
                    @for (int j = i; j < i + 3 && j < Model.BlogPostList.Count; j++)
                    {
                        var blogPost = Model.BlogPostList[j];

                        <div class="col-md-4">
                            <a href="@Url.Action("Details", "Home", new { urlHandle = blogPost.UrlHandle })" class="text-decoration-none">
                                <div class="blog-card bg-dark text-light p-5 mb-4" style="border-radius: 20px;">
                                    <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading" class="mb-2 d-block img-fluid" style="height:250px; width:450px" />
                                    <p class="mb-4" style="font-size:17px;font-weight:400;">@blogPost.Heading</p>
                                    <p class="mb-4" style="text-align:right;">@blogPost.Author</p>

                                    <p class="mb-4">
                                        @foreach (var tag in blogPost.Tags)
                                        {
                                            <span class="badge bg-secondary me-1">@tag.Name</span>
                                        }
                                    </p>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            }
        }
    </div>
</body>







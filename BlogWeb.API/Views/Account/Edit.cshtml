@model BlogWeb.API.Models.ViewModels.UserListViewModel

@{
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            <h1 class="mt-3 mb-3 h3">
                Edit User
            </h1>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Id</label>
                    <input type="text" class="form-control" id="id" asp-for="@Model.newUserInfo.newRegister.UserId" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" id="username" class="form-control" asp-for="@Model.newUserInfo.newRegister.UserName" required />
                    <span class="text-danger" asp-validation-for="@Model.newUserInfo.newRegister.UserName"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" id="email" class="form-control" asp-for="@Model.newUserInfo.newRegister.Email" required />
                    <span class="text-danger" asp-validation-for="@Model.newUserInfo.newRegister.Email"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-dark">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

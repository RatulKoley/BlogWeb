@model BlogWeb.API.Models.ViewModels.UserListViewModel

@{
}

<link rel="stylesheet" href="~/css/index.css" />

<div class="card">
    <div class="card-body">
        <div style="display: flex; justify-content: space-between;">

            <div class="mb-3 d-flex justify-content-end">
                <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#modalCreateUser">
                    <i class="fas fa-plus"></i>  Create User
                </button>
            </div>

            <form method="get" asp-action="UserList" style="width: 200px;">
                <div class="input-group">
                    <input name="searchterm" class="form-control form-control-sm my-0 py-1 red-border" type="text" style="border: 2px solid #FF5733;
    border-radius: 15px;" placeholder="Search" />
                    <div class="input-group-append">
                    </div>
                </div>
            </form>
        </div>
        @if (Model.UserList != null && Model.UserList.Any())
        {
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">
                            <h6 style="text-align:center;font-weight:600">User Id</h6>
                        </th>
                        <th scope="col">
                            <a style="display: block; text-align: center; font-weight: 600; color: inherit; text-decoration: none; margin-bottom: 6px;"
                               href="/Account/UserList?orderBy=@Model.NameSortOrder">User Name</a>
                            
                        </th>
                        <th scope="col">
                            <h6 style="text-align:center;font-weight:600">Email</h6>
                        </th>
                        <th scope="col">
                            <h6 style="text-align:center;font-weight:600">Actions</h6>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.UserList)
                    {
                        <tr style="text-align:center; font-size: 14px;">
                            <td>
                                @Html.DisplayFor(modelItem => @user.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => @user.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => @user.EmailAddress)
                            </td>
                            <td class="table-data">
                                <div class="d-flex justify-content-center align-items-center">
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="edit-button me-2">
                                        <i class="fas fa-edit" style="color: #3498db;"></i>
                                    </a>
                                    <form method="post" asp-action="Delete" asp-route-id="@user.Id" class="delete-form">
                                        <button type="submit" class="delete-button" style="background: none; border: none;">
                                            <i class="fas fa-trash-alt" style="color: #e74c3c;"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Users found!</p>
        }


        <nav aria-label="Page navigation example">
            <ul class="pagination" style="display: flex; justify-content: flex-end; margin-top: 20px;">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item" style="list-style: none; margin-right: 5px;">
                        <a class="page-link" style="color: #007bff;
    text-decoration: none;
    padding: 5px 8px;
    border: 1px solid #007bff;
    border-radius: 3px;
    font-size: 14px;
    transition: background-color 0.3s, color 0.3s;" href="/Account/UserList?term=@Model.Term&orderBy=@Model.OrderBy&currentPage=1" aria-label="Very first page">
                            <span aria-hidden="true">««</span>
                        </a>
                    </li>
                    <li class="page-item" style="list-style: none; margin-right: 5px;">
                        <a class="page-link" style="color: #007bff;
    text-decoration: none;
    padding: 5px 8px;
    border: 1px solid #007bff;
    border-radius: 3px;
    font-size: 14px;
    transition: background-color 0.3s, color 0.3s;" href="/Account/UserList?term=@Model.Term&orderBy=@Model.OrderBy&currentPage=@(Model.CurrentPage - 1)" aria-label="Previous">
                            <span aria-hidden="true">«</span>
                        </a>
                    </li>
                }
                @for (int i = Math.Max(1, Model.CurrentPage - 1); i <= Math.Min(Model.TotalPage, Model.CurrentPage + 1); i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item" style="list-style: none; margin-right: 5px;">
                            <a class="page-link active" style="color: #fff;
    text-decoration: none;
    padding: 5px 8px;
    border: 1px solid #007bff;
    border-radius: 3px;
    background-color: #007bff;
    font-size: 14px;
    transition: background-color 0.3s, color 0.3s;" href="/Account/UserList?term=@Model.Term&orderBy=@Model.OrderBy&currentPage=@i"> @i</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item" style="list-style: none; margin-right: 5px;">
                            <a class="page-link" style="color: #007bff;
    text-decoration: none;
    padding: 5px 8px;
    border: 1px solid #007bff;
    border-radius: 3px;
    font-size: 14px;
    transition: background-color 0.3s, color 0.3s;" href="/Account/UserList?term=@Model.Term&orderBy=@Model.OrderBy&currentPage=@i"> @i</a>
                        </li>
                    }
                }
                @if (Model.CurrentPage < Model.TotalPage)
                {
                    <li class="page-item" style="list-style: none; margin-right: 5px;">
                        <a class="page-link" style="color: #007bff;
    text-decoration: none;
    padding: 5px 8px;
    border: 1px solid #007bff;
    border-radius: 3px;
    font-size: 14px;
    transition: background-color 0.3s, color 0.3s;" href="/Account/UserList?term=@Model.Term&orderBy=@Model.OrderBy&currentPage=@(Model.CurrentPage + 1)" aria-label="Next">
                            <span aria-hidden="true">»</span>
                        </a>
                    </li>
                    <li class="page-item" style="list-style: none; margin-right: 5px;">
                        <a class="page-link" style="color: #007bff;
    text-decoration: none;
    padding: 5px 8px;
    border: 1px solid #007bff;
    border-radius: 3px;
    font-size: 14px;
    transition: background-color 0.3s, color 0.3s;" href="/Account/UserList?term=@Model.Term&orderBy=@Model.OrderBy&currentPage=@Model.TotalPage" aria-label="Last page">
                            <span aria-hidden="true">»»</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>


    </div>
</div>


    </div>
</div>


<!-- Modal -->
<form method="post" style="color:black; border-radius:20px;">
    <div class="modal fade" id="modalCreateUser" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Create New User</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <input type="text" class="form-control" asp-for="@Model.newUserInfo.newRegister.UserName" placeholder="UserName"
                               required pattern="^\S+$" title="No spaces are allowed." />
                        <span asp-validation-for="@Model.newUserInfo.newRegister.UserName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control" asp-for="@Model.newUserInfo.newRegister.Email" placeholder="Email Address" required />
                        <span asp-validation-for="@Model.newUserInfo.newRegister.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input type="password" id="password" class="form-control" asp-for="@Model.newUserInfo.newRegister.Password" placeholder="Password" required minlength="8"
                               pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\W_]).{8,}"
                               title="Contain Min 8 Char Include Upper, Lower, Special, Number" />
                        <span asp-validation-for="@Model.newUserInfo.newRegister.Password" class="text-danger"></span>

                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input type="checkbox" id="chkUserRole" class="form-check-input" value="User" checked disabled />
                            <label class="form-check-label" for="chkUserRole">User Role</label>
                        </div>

                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <div class="form-check">
                                <input type="checkbox" id="chkAdminRole" class="form-check-input"
                                       asp-for="@Model.newUserInfo.isAdmin" />
                                <label class="form-check-label" for="chkAdminRole">Admin Role</label>
                            </div>
                        }

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>







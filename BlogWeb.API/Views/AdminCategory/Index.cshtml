@model BlogWeb.API.Models.Helpers.CategoryListViewModel
@{
}

<link rel="stylesheet" href="~/css/index.css" />

<div class="card">
    <div class="card-body">
        <div style="display: flex; justify-content: space-between;">
            <a asp-action="Add" class="create-button" style="margin-bottom: 8px;">
                <i class="fas fa-plus"></i> Add New
            </a>

            <form asp-action="Index" style="width: 200px;">
                <div class="input-group">
                    <input name="searchterm" class="form-control form-control-sm my-0 py-1 red-border" type="text" style="border: 2px solid #FF5733;
                                border-radius: 15px;" placeholder="Search" />
                    <div class="input-group-append">
                    </div>
                </div>
            </form>
        </div>
        @if (Model != null && Model.CategoryList.Any())
        {
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">
                            <h6 style="text-align:center;font-weight:600">Category Id</h6>
                        </th>
                        <th scope="col">
                            <a style="display: block; text-align: center; font-weight: 600; color: inherit; text-decoration: none; margin-bottom: 6px;"
                               href="/AdminCategory/Index?orderBy=@Model.NameSortOrder">Name</a>
                        </th>
                        <th scope="col">
                            <h6 style="text-align:center;font-weight:600">Total Tags</h6>
                        </th>
                        <th scope="col">
                            <h6 style="text-align:center;font-weight:600">Total Posts</h6>
                        </th>
                        <th scope="col">
                            <h6 style="text-align:center;font-weight:600">Actions</h6>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tag in Model.CategoryList)
                    {
                        <tr style="text-align:center; font-size: 14px;">
                            <td>
                                @Html.DisplayFor(modelItem => tag.CategoryModel.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => tag.CategoryModel.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => tag.TagsCount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => tag.CategoryModel.PostCount)
                            </td>
                            <td class="table-data">
                                <div class="d-flex justify-content-center align-items-center">
                                    <a asp-action="Edit" asp-route-id="@tag.CategoryModel.Id" class="edit-button me-2">
                                        <i class="fas fa-edit" style="color: #3498db;"></i>
                                    </a>
                                    <form method="post" asp-action="Delete" asp-route-id="@tag.CategoryModel.Id" class="delete-form">
                                        <button type="submit" class="delete-button" style="background: none; border: none;">
                                            <i class="fas fa-trash-alt" style="color: #e74c3c;"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No tags found!</p>
        }

        <nav aria-label="Page navigation example">
            <ul class="pagination" style="display: flex; justify-content: flex-end; margin-top: 20px;">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item" style="list-style: none; margin-right: 5px;">
                        <a class="page-link" style="color: #007bff;
    text-decoration: none;
    padding: 5px 8px;
    border: 1px solid #007bff;
    border-radius: 3px;
    font-size: 14px;
    transition: background-color 0.3s, color 0.3s;" href="/AdminCategory/Index?term=@Model.Term&orderBy=@Model.OrderBy&currentPage=1" aria-label="Very first page">
                            <span aria-hidden="true">««</span>
                        </a>
                    </li>
                    <li class="page-item" style="list-style: none; margin-right: 5px;">
                        <a class="page-link" style="color: #007bff;
    text-decoration: none;
    padding: 5px 8px;
    border: 1px solid #007bff;
    border-radius: 3px;
    font-size: 14px;
    transition: background-color 0.3s, color 0.3s;" href="/AdminCategory/Index?term=@Model.Term&orderBy=@Model.OrderBy&currentPage=@(Model.CurrentPage - 1)" aria-label="Previous">
                            <span aria-hidden="true">«</span>
                        </a>
                    </li>
                }
                @for (int i = Math.Max(1, Model.CurrentPage - 1); i <= Math.Min(Model.TotalPage, Model.CurrentPage + 1); i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item" style="list-style: none; margin-right: 5px;">
                            <a class="page-link active" style="color: #fff;
    text-decoration: none;
    padding: 5px 8px;
    border: 1px solid #007bff;
    border-radius: 3px;
    background-color: #007bff;
    font-size: 14px;
    transition: background-color 0.3s, color 0.3s;" href="/AdminCategory/Index?term=@Model.Term&orderBy=@Model.OrderBy&currentPage=@i"> @i</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item" style="list-style: none; margin-right: 5px;">
                            <a class="page-link" style="color: #007bff;
    text-decoration: none;
    padding: 5px 8px;
    border: 1px solid #007bff;
    border-radius: 3px;
    font-size: 14px;
    transition: background-color 0.3s, color 0.3s;" href="/AdminCategory/Index?term=@Model.Term&orderBy=@Model.OrderBy&currentPage=@i"> @i</a>
                        </li>
                    }
                }
                @if (Model.CurrentPage < Model.TotalPage)
                {
                    <li class="page-item" style="list-style: none; margin-right: 5px;">
                        <a class="page-link" style="color: #007bff;
    text-decoration: none;
    padding: 5px 8px;
    border: 1px solid #007bff;
    border-radius: 3px;
    font-size: 14px;
    transition: background-color 0.3s, color 0.3s;" href="/AdminCategory/Index?term=@Model.Term&orderBy=@Model.OrderBy&currentPage=@(Model.CurrentPage + 1)" aria-label="Next">
                            <span aria-hidden="true">»</span>
                        </a>
                    </li>
                    <li class="page-item" style="list-style: none; margin-right: 5px;">
                        <a class="page-link" style="color: #007bff;
    text-decoration: none;
    padding: 5px 8px;
    border: 1px solid #007bff;
    border-radius: 3px;
    font-size: 14px;
    transition: background-color 0.3s, color 0.3s;" href="/AdminCategory/Index?term=@Model.Term&orderBy=@Model.OrderBy&currentPage=@Model.TotalPage" aria-label="Last page">
                            <span aria-hidden="true">»»</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>

    </div>
</div>